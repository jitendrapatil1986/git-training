@using Warranty.UI.Core.Helpers
@model Warranty.Core.Features.RepServiceCalls.ServiceRepServiceCallsModel

@foreach (var line in Model.ClosedServiceCalls)
{
    <div class="service-call-line">
        <div class="col-md-1">
            <small class="text-muted">@line.CallNumber</small>
        </div>
        <div class="col-md-5">
            <div class="col-md-1 hidden-sm hidden-xs">
                @Format.NumberOfLineItems(line.NumberOfLineItems)
            </div>
            <div class="col-md-10">
                <a>@line.HomeownerName</a><br />@line.Address
            </div>
        </div>
        <div class="col-md-2">@Format.PhoneNumber(line.PhoneNumber)</div>
        <div class="col-md-2">@Format.DateForOpenDate(line.CreatedDate)</div>
        <div class="col-md-2">@Format.DateForClosedDate(line.CompletionDate)</div>
        <div class="clearfix"></div>
    </div>
}
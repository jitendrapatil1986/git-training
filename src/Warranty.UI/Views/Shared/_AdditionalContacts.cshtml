@model Guid
<section class="hidden-xs">
    <h5 class="col-md-12 additional-contacts-heading" data-toggle="collapse" data-target="#addAdditionalcontacts">Additional contact information</h5>
    <div id="addAdditionalcontacts" data-bind="stopBinding: true" class="collapse">
        <div class="col-md-12">
            <input type="hidden" value="@Model" id="HomeownerId"/>
            <div class="row" id="Additional_Contacts">
                <div class="col-md-5">
                    <div class="remove-list-style row">
                        <ul>
                            <li>
                                <div data-bind="foreach: { data: additionalPhoneContacts, afterRender: afterAdditionalContactRendered }">
                                    <div class='inline-editable-text margin-bottom-5 additional-contact can-remove'>
                                        <span class="glyphicon glyphicon-earphone additional-contact-icon"></span>
                                        <a href="#" class="additional-contact-phone"></a>
                                        <span class="glyphicon glyphicon-trash remove-additional-contact" data-bind="click: $parent.removeAdditionalContact"></span>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="remove-list-style row">
                        <ul>
                            <li>
                                <div data-bind="foreach: { data: additionalEmailContacts, afterRender: afterAdditionalContactRendered }">
                                    <div class='inline-editable-text margin-bottom-5 additional-contact can-remove'>
                                        <span class="glyphicon glyphicon-envelope additional-contact-icon"></span>
                                        <a href="#" class="additional-contact-email"></a>
                                        <span class="glyphicon glyphicon-trash remove-additional-contact" data-bind="click: $parent.removeAdditionalContact"></span>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

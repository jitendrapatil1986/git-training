@using Warranty.Core.Extensions
@using Warranty.UI.Core.Helpers
@model Warranty.Core.Features.CreateServiceCallVerifyCustomer.CreateServiceCallVerifyCustomerModel

<div class="container">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="row text-center">
                    <h4>Create Service Call Request</h4>
                </div>
                <div class="row text-center">
                    <div>
                        Step 2: Verify Customer
                    </div>
                </div>
                <br/>
                <div class="row">
                    <div class="col-md-8 col-md-offset-2">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Type Homeowner, Address, or Job Number">
                            <div class="input-group-btn">
                                <button id="btn-add-call-search-customer" type="button" class="btn btn-default"><span class="glyphicon glyphicon-search"></span></button>
                            </div>
                        </div>
                        <form class="" role="search">
                        </form>
                    </div>
                </div>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 small"><span class="glyphicon glyphicon-asterisk"></span>
                        <u>Please verify customer and address data below</u>
                    </div>
                    <div class="col-md-12">
                        <div class="service-call-line">
                            <div class="row">
                                <div class="col-md-12">
                                    <h4><a>@Html.DisplayFor(x => x.HomeOwnerName)</a></h4>
                                    @Format.YearsWithinWarranty(Model.YearsWithinWarranty, Model.WarrantyStartDate)
                                </div>
                            </div>
                            <br/>
                            <div class="row">
                                <div class="col-md-12">
                                    @Html.DisplayFor(x => x.Address1)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    @Format.CityStateZip(Model.City, Model.StateCode, Model.PostalCode)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    Job Number: @Html.ActionLink(Model.JobNumber, "JobSummary", "Job", new {id = Model.JobId}, null)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    @Format.CellNumber(Model.OtherPhone)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    @Format.HomeNumber(Model.HomePhone)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    @Format.PhoneNumber(Model.WorkPhone1)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <a>@Format.Email(Model.EmailAddress)</a>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel-footer text-center">
                @Html.ActionLink("Continue", "Create", "ServiceCall", new {id = Model.JobId}, new{ @class="btn btn-primary", id="btn_search_call_verify_customer"})
            </div>
        </div>
    </div>
</div>
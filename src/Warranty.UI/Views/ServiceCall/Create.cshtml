@using Warranty.Core.Extensions
@using Warranty.UI.Core.Helpers
@model Warranty.Core.Features.CreateServiceCall.CreateServiceCallModel

@using (Html.BeginForm())
{
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <div class="row text-center">
                            <h4>Create Service Call Request</h4>
                        </div>
                        <div class="row text-center">
                            <div>
                                Step 3: Enter & Submit Data
                            </div>
                        </div>
                        <br/>
                        <div class="row">
                            <div class="col-md-5">
                                <a>
                                    <h3 class="panel-title text-capitalize">@Html.DisplayFor(x => x.HomeOwnerName)</h3>
                                </a>
                                @Html.DisplayFor(x => x.Address1)
                                <br/>
                                @Format.CityStateZip(Model.City, Model.StateCode, Model.PostalCode)
                            </div>
                            <div class="col-md-4">
                                @Format.CellNumber(Model.OtherPhone)
                                <br/>
                                @Format.HomeNumber(Model.HomePhone)
                                <br/>
                                <a>@Format.Email(Model.EmailAddress)</a>
                            </div>
                            <div class="col-md-3">
                                Job Number: <a>@Html.DisplayFor(x => x.JobNumber)</a>
                                <br/>
                                Builder: @Html.DisplayFor(x => x.BuilderName)
                                <br/>
                                Sales: @Html.DisplayFor(x => x.SalesPersonName)
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-5">
                                
                            </div>
                            <div class="col-md-4">
                                
                            </div>
                            <div class="col-md-3">
                                
                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-12">
                            
                                @Html.DropDownList("SelectProblemCode", Model.ProblemCodeList, "Select Problem Code", new {id="problemCode"} )
                                <br/>
                                @Html.TextArea("Description", null, new {id="problemDescription"})
                                <button class="btn btn-default" data-bind="click: addLineItem">Add Item</button>

                                <br/>
                                
                                <div data-bind="foreach: lineItems">
                                    <input type="hidden" data-bind="value: $index() + 1, attr: { name: 'ServiceCallLineItems[' + $index() + '].LineItemNumber' }" />
                                    <input type="hidden" data-bind="value: problemCodeId, attr: { name: 'ServiceCallLineItems[' + $index() + '].ProblemCodeId' }" />
                                    <input type="hidden" data-bind="value: problemDescription, attr: { name: 'ServiceCallLineItems[' + $index() + '].ProblemDescription' }" />
                                    <span data-bind="text: problemCode"></span>
                                    <span data-bind="text: problemDescription"></span>
                                    <button data-bind="click: $root.removeLineItem">Remove Line Item</button>
                                </div>
                                
                            </div>
                        </div>
                    </div>
                    <div class="panel-footer text-center">
                        <div class="row">
                            <div class="col-md-12">
                                <input type="submit" value="Submit" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section scripts{
        <script type="text/javascript">
            require(['/Scripts/app/main.js'], function () {
                require(['jquery', 'ko'], function ($, ko) {
                    function createServiceCallViewModel() {
                        var self = this;
                        self.lineItems = ko.observableArray([]);
                        self.addLineItem = function () {
                            self.lineItems.push(new lineItemViewModel({ problemCode: $("#problemCode").find('option:selected').text(), problemCodeId: $("#problemCode").val(), problemDescription: $("#problemDescription").val() }));
                            $("#problemDescription").val('');
                        };

                        self.removeLineItem = function (lineItem) {
                            self.lineItems.remove(lineItem);
                        };
                    }

                    function lineItemViewModel(options) {
                        var self = this;
                        self.problemCode = options.problemCode;
                        self.problemCodeId = options.problemCodeId;
                        self.problemDescription = options.problemDescription;
                    }

                    var viewModel = new createServiceCallViewModel();
                    ko.applyBindings(viewModel);

                });
            });
    </script>
}

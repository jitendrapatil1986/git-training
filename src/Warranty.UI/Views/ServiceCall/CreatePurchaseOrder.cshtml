@using Warranty.Core.Extensions
@using Warranty.Core.Enumerations
@model Warranty.Core.Features.AddServiceCallPurchaseOrder.AddServiceCallPurchaseOrderModel

<div style="display: none;" data-bind="visible: true">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <section class="margin-bottom-10">
                    <h2 class="no-margin">
                        Create PO
                    </h2>
                </section>
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="row margin-bottom-10">
                            <div class="col-md-6">
                                <div class="control-group" data-bind="validationElement: vendorNumber, validationOptions: { insertMessages: false}">
                                    <label class="control-label" for="vendor-search">Vendor</label>
                                    <input type="text" id="vendor-search" class="form-control" autocomplete="off" placeholder="Type vendor name or vendor number" />
                                    <span data-bind="validationMessage: vendorNumber" class="help-block"></span>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="control-group padding-top-31" data-bind="validationElement: isMaterialObjectAccount, validationOptions: { insertMessages: false}">
                                    <label class="radio-inline">
                                        <input type="radio" id="materialAccount" name="isMaterialObjectAccount" data-bind="checked: isMaterialObjectAccount" value="true"> Material
                                    </label>
                                    <label class="radio-inline">
                                        <input type="radio" id="laborAccount" name="isMaterialObjectAccount" data-bind="checked: isMaterialObjectAccount" value="false"> Labor
                                    </label>
                                    <span data-bind="validationMessage: isMaterialObjectAccount" class="help-block padding-top-7"></span>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <label>Ship To</label>
                                <div class="small">
                                    <a class="" data-bind="text: 'Job #' + jobNumber()" href="@Url.Action("JobSummary", "Job", new {id = Model.JobId})"></a>
                                    <br/>
                                    <span data-bind="text: address"></span>
                                    <br/>
                                    <span data-bind="text: city() + ', ' + stateCode() + ' ' + postalCode()"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row margin-bottom-10">
                            <div class="col-md-6">
                                <div class="control-group" data-bind="validationElement: selectedDeliveryInstruction">
                                    <label class="control-label" for="selectedDeliveryInstruction">Delivery Instructions</label>
                                    <select id="selectedDeliveryInstruction" class="form-control" data-bind="options: deliveryInstructionCodes, optionsText: 'displayText', optionsValue: 'value', value: selectedDeliveryInstruction, optionsCaption: 'Select Delivery Instruction'"></select>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="control-group" data-bind="validationElement: deliveryDate">
                                    <label class="control-label" for="deliveryDate">Delivery Date</label>
                                    <input id="deliveryDate" type="text" class="form-control datepicker-input" data-bind="value: deliveryDate" placeholder="Select Date"/>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="control-group" data-bind="validationElement: selectedCostCode">
                                    <label class="control-label" for="selectedCostCode">Cost Codes</label>
                                    <select id="selectedCostCode" class="form-control" data-bind="options: warrantyCostCodes, optionsText: 'displayText', optionsValue: 'value', value: selectedCostCode, optionsCaption: 'Select Cost Code'"></select>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <h3>Items</h3>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-2"><label>Quantity</label></div>
                            <div class="col-md-7"><label>Description</label></div>
                            <div class="col-md-2"><label>Unit Cost</label></div>
                            <div class="col-md-1"><label class="text-right pull-right">Subtotal</label></div>
                        </div>
                        <div class="row margin-bottom-10">
                            <div class="col-md-2">
                                <div class="control-group">
                                    <input type="text" class="form-control numeric" data-bind="value: line1.quantity"/>
                                </div>
                            </div>
                            <div class="col-md-7">
                                <div class="control-group">
                                    <input type="text" class="form-control" data-bind="value: line1.description"/>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="control-group">
                                    <input type="text" class="form-control numeric" data-bind="value: line1.unitCost"/>
                                </div>
                            </div>
                            <div class="col-md-1">
                                <p class="text-right" data-bind="currency: line1.subTotal"></p>
                            </div>
                        </div>
                        <div class="row margin-bottom-10">
                            <div class="col-md-2">
                                <div class="control-group">
                                    <input type="text" class="form-control numeric" data-bind="value: line2.quantity"/>
                                </div>
                            </div>
                            <div class="col-md-7">
                                <div class="control-group">
                                    <input type="text" class="form-control" data-bind="value: line2.description"/>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="control-group">
                                    <input type="text" class="form-control numeric" data-bind="value: line2.unitCost"/>
                                </div>
                            </div>
                            <div class="col-md-1">
                                <p class="text-right" data-bind="currency: line2.subTotal"></p>
                            </div>
                        </div>
                        <div class="row margin-bottom-10">
                            <div class="col-md-2">
                                <div class="control-group">
                                    <input type="text" class="form-control numeric" data-bind="value: line3.quantity"/>
                                </div>
                            </div>
                            <div class="col-md-7">
                                <div class="control-group">
                                    <input type="text" class="form-control" data-bind="value: line3.description"/>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="control-group">
                                    <input type="text" class="form-control numeric" data-bind="value: line3.unitCost"/>
                                </div>
                            </div>
                            <div class="col-md-1">
                                <p class="text-right" data-bind="currency: line3.subTotal"></p>
                            </div>
                        </div>
                        <div class="row margin-bottom-10">
                            <div class="col-md-2">
                                <div class="control-group">
                                    <input type="text" class="form-control numeric" data-bind="value: line4.quantity"/>
                                </div>
                            </div>
                            <div class="col-md-7">
                                <div class="control-group">
                                    <input type="text" class="form-control" data-bind="value: line4.description"/>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="control-group">
                                    <input type="text" class="form-control numeric" data-bind="value: line4.unitCost"/>
                                </div>
                            </div>
                            <div class="col-md-1">
                                <p class="text-right" data-bind="currency: line4.subTotal"></p>
                            </div>
                        </div>
                        <div class="row margin-bottom-10">
                            <div class="col-md-2">
                                <div class="control-group">
                                    <input type="text" class="form-control numeric" data-bind="value: line5.quantity"/>
                                </div>
                            </div>
                            <div class="col-md-7">
                                <div class="control-group">
                                    <input type="text" class="form-control" data-bind="value: line5.description"/>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="control-group">
                                    <input type="text" class="form-control numeric" data-bind="value: line5.unitCost"/>
                                </div>
                            </div>
                            <div class="col-md-1">
                                <p class="text-right" data-bind="currency: line5.subTotal"></p>
                            </div>
                        </div>

                        <!-- ko foreach: allPurchaseOrderLines -->
                        <div class="row margin-bottom-10">
                            <div class="col-md-2">
                                <input type="text" class="form-control" data-bind="value: quantity, attr: {id: 'quantity_' + lineNumber()}"/>
                            </div>
                            <div class="col-md-7">
                                <input type="text" class="form-control" data-bind="value: description"/>
                            </div>
                            <div class="col-md-2">
                                <input type="text" class="form-control" data-bind="value: unitCost, attr: {id: 'unitCost_' + lineNumber()}"/>
                            </div>
                            <div class="col-md-1">
                                <p class="text-right" data-bind="currency: subTotal"></p>
                            </div>
                            <span class="hidden" data-bind="value: lineNumber($index() + 6)"></span>
                        </div>
                        <!-- /ko -->

                        <div class="row margin-bottom-10">
                            <div class="col-md-9">
                                <a href="#" data-bind="click: $root.addPurchaseOrderLine">+ Add a new line</a>
                            </div>
                            <div class="col-md-1">Total</div>
                            <div class="col-md-2">
                                <span class="pull-right" data-bind="currency: totalCost"></span>
                            </div>
                        </div>
                        <div class="row margin-top-10">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="notes">Notes</label>
                                    <textarea id="notes" class="form-control" data-bind="value: notes" rows="3"></textarea>
                                </div>
                            </div>
                        </div>
                        
                        <input type = "submit" class="btn btn-info" data-bind="click: submitPurchaseOrder"/>
                        <a href="@Url.Action("LineItemDetail", "ServiceCall", new { id = Model.ServiceCallLineItemId })" class="btn btn-link">Cancel</a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>


@section modules
{
    <script>
        define('modelData', function() {
            return {
                initialPurchaseOrder: @Html.Raw(Model.ToJson()),
                deliveryInstructionCodes: @Html.Raw(@DeliveryInstruction.GetAll().OrderBy(x => x.DisplayName).Select(x => new {DisplayText = x.DisplayName, Value = x.Value}).ToJson()),
                warrantyCostCodes: @Html.Raw(@WarrantyCostCode.GetAll().OrderBy(x => x.DisplayName).Select(x => new {DisplayText = x.DisplayName, Value = x.Value}).ToJson()),
            };
        });

        define('dropdownData', function() {

        });
    </script>
}
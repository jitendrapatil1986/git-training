@using Warranty.UI.Core.Helpers
@model Warranty.Core.Features.MyServiceTeamWidget.MyServiceTeamWidgetModel

@*<div id="my_service_chart" style="min-width: 310px; height: 400px; margin: 0 auto"></div>*@

<div>    
    <div id="my_service_chart"></div>
</div>

<script type="text/javascript">
    require(['jquery', 'highcharts'], function ($) {
        alert('hello');        
        alert(@Html.Raw(Model.Months));        
        alert(@Html.Raw(Model.SeriesData));
        
        $('#my_service_chart').highcharts({
            title: {
                text: 'My Team',
                x: 0 //center
            },
            //subtitle: {
            //    text: '',
            //    x: -20
            //},
            xAxis: {
                //categories: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun',
                //    'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec']
                categories: [@Html.Raw(Model.Months)]
            },
            yAxis: {
                title: {
                    text: 'Warranty Dollars (Thousands)'
                },
                min: 0,
                plotLines: [{
                    value: 0,
                    width: 1,
                    color: '#808080'
                }]
            },
            tooltip: {
                valueSuffix: 'K'
            },
            legend: {
                layout: 'vertical',
                align: 'right',
                verticalAlign: 'middle',
                borderWidth: 0
            },
            //series: [{
            //    name: 'US',
            //    //data: [31.0, 45.9, 38.5, 37.5, 49.2, 40.0, 39.2, 5.5, 0.0, 0.0, 0.0, 0.0]
            //    data: [31.0, 45.9, 38.5, 37.5, 49.2, 40.0, 39.2, 5.5, 0.0, 0.0, 0.0, 0.0]
            //}]
            series: [@Html.Raw(Model.SeriesData)]
        });

    });
</script>
    

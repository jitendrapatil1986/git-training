@using Warranty.Core.Enumerations
@using Warranty.UI.Core.Helpers
@model Warranty.Core.Features.PercentSurveyExcellentWidget.PercentSurveyExcellentWidgetModel

<div class="panel panel-info dashboard-widget">
    <div class="panel-heading">
        <div class="dashboard-widget-title">% EXCELLENT SERVICE</div>
    </div>
    <div class="panel-body">
        @*<a href="@Url.Action("Index", "Stats", new{id=StatView.PercentClosed.DisplayName})">*@
            <div class="dashboard-widget-number">@Format.Percentage(Model.PercentExcellentThisMonth)</div>
        <div class="dashboard-widget-previous-number">@Format.Percentage(Model.PercentExcellentLastMonth) last month</div>
        <div class="dashboard-widget-footnote">
            <span class="pull-left">@Month.FromValue(DateTime.Today.AddMonths(-1).Month).Abbreviation: @Model.TotalSurveysLastMonth</span>
            <span class="pull-right">@Month.FromValue(DateTime.Today.Month).Abbreviation: @Model.TotalSurveysThisMonth</span>
        </div>
        @*</a>*@
    </div>
</div>
